df <- data.frame(
  values = values,
  quantiles = ecdf(values)(values)  # Funkcja empirycznej dystrybucji kwantyli
)

# Rysowanie wykresu
ggplot(df, aes(x = quantiles, y = values)) +
  geom_point(size = 3, color = "blue") +
  geom_hline(yintercept = y, linetype = "dashed", color = "red") + 
  labs(
    title = "Wykres kwantyli z wartością odniesienia y",
    x = "Kwantyle",
    y = "Wartości"
  ) +
  theme_minimal()
