df_stopy.columns = df_stopy.iloc[0]  # Przekształcamy pierwszy wiersz w nagłówki
df_stopy = df_stopy[1:].reset_index(drop=True) 


df_stopy = df_stopy.iloc[1:]  # Usunięcie pierwszego wiersza (który był błędnym nagłówkiem)
df_stopy.columns = df_stopy.iloc[0]  # Przekształcamy nowy pierwszy wiersz w nagłówki
df_stopy = df_stopy[1:].reset_index(drop=True)  # Usuwamy stary pierwszy wiersz
