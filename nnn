static std::string nazwa_pliku;
char buf[256] = {0};  // Inicjalizacja bufora

// Kopiowanie zawarto≈õci std::string do bufora
std::snprintf(buf, sizeof(buf), "%s", nazwa_pliku.c_str());

ImGui::Text("Nazwa pliku");
ImGui::SameLine();
if (ImGui::InputText("##nazwa_pliku", buf, IM_ARRAYSIZE(buf)))
{
    nazwa_pliku = buf; // Aktualizacja std::string po wpisaniu tekstu
}
