# Przyklad danych
df <- data.frame(
  Column1 = c(11345, 2345, 123456, 7890),
  Column2 = c(987654, 1234567, 234567, 3456),
  Column3 = c(12, 34, 56, 78) # Ta kolumna pozostanie niezmieniona
)

# Wybieramy kolumny, które mają być sformatowane (np. Column1 i Column2)
cols_to_format <- c("Column1", "Column2")

# Formatujemy tylko te kolumny
df[cols_to_format] <- lapply(df[cols_to_format], function(x) format(x, big.mark = " ", scientific = FALSE))

# Zobacz wynik
print(df)
