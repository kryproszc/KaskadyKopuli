void SimpleSeparatorWithText(const char* text) {
    ImVec2 textSize = ImGui::CalcTextSize(text);  
    float fullWidth = ImGui::GetContentRegionAvail().x;  // Maksymalna szerokość dostępna w oknie

    // Odstęp przed separatorem
    ImGui::Spacing();

    // Linie przed i po tekście
    float lineWidth = (fullWidth - textSize.x) / 2.0f - 10.0f; // -10 dla małego odstępu
    if (lineWidth > 0) {
        ImGui::SameLine();
        ImGui::PushItemWidth(lineWidth);
        ImGui::Separator();
        ImGui::PopItemWidth();
    }

    // Tekst
    ImGui::SameLine();
    ImGui::Text("%s", text);
    
    // Druga linia
    if (lineWidth > 0) {
        ImGui::SameLine();
        ImGui::PushItemWidth(lineWidth);
        ImGui::Separator();
        ImGui::PopItemWidth();
    }

    // Odstęp po separatorze
    ImGui::Spacing();
}


void ShowUI() {
    ImGui::Begin("Separator Test");

    ImGui::Text("Przykładowy tekst przed separatorem");
    SimpleSeparatorWithText("ODNOWIENIE");
    ImGui::Text("Przykładowy tekst po separatorze");

    ImGui::End();
}
