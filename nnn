void CenteredSeparatorWithBackground(const char* text, float height = 30.0f, ImU32 bgColor = IM_COL32(200, 200, 200, 255), ImU32 textColor = IM_COL32(0, 0, 0, 255)) {
    ImVec2 availableSize = ImGui::GetContentRegionAvail();  // Pobiera dostępną szerokość
    ImVec2 textSize = ImGui::CalcTextSize(text);  // Oblicza rozmiar tekstu
    ImVec2 cursorPos = ImGui::GetCursorScreenPos();  // Pobiera aktualną pozycję kursora

    float padding = 10.0f;
    float rectWidth = availableSize.x;  // Szerokość na cały ekran
    float rectHeight = height;  // Wysokość paska tła
    float textX = cursorPos.x + (rectWidth - textSize.x) * 0.5f; // Wyśrodkowanie poziome
    float textY = cursorPos.y + (rectHeight - textSize.y) * 0.5f; // Wyśrodkowanie pionowe

    // Pobranie listy rysowania
    ImDrawList* drawList = ImGui::GetWindowDrawList();

    // Rysowanie szarego prostokąta (tło)
    drawList->AddRectFilled(cursorPos, ImVec2(cursorPos.x + rectWidth, cursorPos.y + rectHeight), bgColor);

    // Rysowanie tekstu na tle
    drawList->AddText(ImVec2(textX, textY), textColor, text);

    // Przesunięcie kursora w dół, żeby następne elementy były pod paskiem
    ImGui::Dummy(ImVec2(rectWidth, rectHeight));
}
