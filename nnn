from shiny import App, ui, reactive

# Define UI
app_ui = ui.page_fluid(
    ui.h2("Shiny Button Example"),
    ui.input_action_button("btn_click", "Click Me!"),
    ui.output_text_verbatim("output")
)

# Define Server Logic
def server(input, output, session):
    counter = reactive.Value(0)

    @reactive.effect
    @reactive.event(input.btn_click)
    def on_button_click():
        counter.set(counter.get() + 1)

    @output
    @render.text
    def output():
        return f"Button clicked {counter.get()} times."

# Run the app
app = App(app_ui, server)
